doctype html
html
  include inc/header

  body
  .navbar.navbar-default.navbar-static-top(role='navigation')
        .container
              .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.navbar-brand(href='#') Open Source Sweeps
              .navbar-collapse.collapse
                ul.nav.navbar-nav
                  - var obj = { 'home':'Home', 'enter': 'Enter to Win', 'about':'FAQ' }
                    - each val, key in obj
                      - if (id == key)
                        li.active
                          a(href='#{key}') #{val}
                      - else
                        li
                          a(href='#{key}') #{val}
                ul.nav.navbar-nav.pull-right
                  li
                    a(href='donate') Donate

  .container.clear-top
    block content

  include inc/footer
